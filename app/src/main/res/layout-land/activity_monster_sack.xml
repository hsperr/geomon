<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.mon.geo.geomon.MonsterSackActivity">

    <fragment
        android:id="@+id/monster_sack_list_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.mon.geo.geomon.MonsterSackFragment"
        tools:layout="@android:layout/simple_list_item_1" />

    <fragment
        android:id="@+id/monster_sack_detail_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="com.mon.geo.geomon.MonsterDetailsFragment" />


</LinearLayout>
